<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote  name="aicp"
           fetch="git://github.com/"
           review="gerrit.aicp-rom.com"
           revision="refs/heads/r11.0"
           sync-j="8" />

  <remote  name="lineage"
           fetch="git://github.com/"
           review="review.lineageos.org"
           revision="refs/heads/lineage-18.0"
           sync-j="8" />

  <remote  name="omni"
           fetch="git://github.com/"
           review="gerrit.omnirom.org"
           revision="refs/heads/android-10"
           sync-j="8" />

   <remote  name="github"
           fetch="git://github.com/"
           sync-c="true"
           sync-j="8" />

   <remote  name="gitlab"
           fetch="https://gitlab.com/"
           sync-j="8" />

  <!-- Remove Packages -->
  <include name="remove.xml" />

  <project path="build/make" name="AICP/build" groups="pdk" remote="aicp" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/blueprint" name="LineageOS/android_build_blueprint" groups="pdk,tradefed" remote="lineage" />
  <project path="build/soong" name="AICP/build_soong" groups="pdk,tradefed" remote="aicp" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>
  <project path="frameworks/base" name="AICP/frameworks_base" remote="aicp" />
  <project path="platform_manifest" name="AICP/platform_manifest" remote="aicp" />
  <project path="prebuilts/tools-aicp" name="LineageOS/android_prebuilts_tools-lineage" clone-depth="1" remote="lineage" />
  <project path="vendor/aicp" name="AICP/vendor_aicp" remote="aicp" />

  <!-- LineageOS Additions -->

  <project path="bootable/recovery" name="LineageOS/android_bootable_recovery" remote="lineage" />
  <project path="device/lineage/sepolicy" name="LineageOS/android_device_lineage_sepolicy" remote="lineage" />
  <project path="external/mksh" name="LineageOS/android_external_mksh" remote="lineage" />
  <project path="packages/apps/Updater" name="LineageOS/android_packages_apps_Updater" remote="lineage" />
  <project path="packages/services/Telephony" name="LineageOS/android_packages_services_Telephony" remote="lineage" />
  <project path="system/core" name="LineageOS/android_system_core" remote="lineage" />
  <project path="system/sepolicy" name="LineageOS/android_system_sepolicy" remote="lineage" />
  <project path="system/update_engine" name="LineageOS/android_system_update_engine" remote="lineage" />

</manifest>
